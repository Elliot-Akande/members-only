extends layout 

block content
  h1= title 
  
  form(action="", method="post") 
    label(for="title") Title: 
    input#title(type='text' placeholder='Title' name='title' required='true' value=(undefined===message ? '' : message.decodedTitle)) 
    label(for="message") Message: 
    textarea#message(type='text' placeholder='Message' name='message' required='true') #{undefined===message ? '' : message.decodedMessage}
    button(type='submit') Submit

  if errors   
    ul 
      for error in errors 
        li!= error.msg