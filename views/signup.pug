extends layout 

block content 
  h1= title

  form(action="", method="post") 
    label(for="firstName") First Name: 
    input#firstName(type='text' placeholder='First name' name='firstName' required='true' value=(undefined===user ? '' : user.firstName)) 
    label(for="lastName") Last Name: 
    input#lastName(type='text' placeholder='Last name' name='lastName' required='true' value=(undefined===user ? '' : user.lastName)) 
    label(for="username") Username: 
    input#username(type='text' placeholder='Username' name='username' autocomplete='username' required='true' value=(undefined===user ? '' : user.username)) 
    label(for="password") Password: 
    input#password(type='password' placeholder='Password' name='password' required='true' minlength='8' autocomplete='new-password' value=(undefined===user ? '' : user.password)) 
    label(for="confirmPassword") Confirm Password: 
    input#confirmPassword(type='password' placeholder='Confirm password' name='confirmPassword' required='true' minlength='8' autocomplete='new-password' value=(undefined===user ? '' : user.confirmPassword)) 
    button(type='submit') Submit

  if errors   
    ul 
      for error in errors 
        li!= error.msg